<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_min="250dp"
        app:layout_constraintHeight_max="450dp"
        app:layout_constraintDimensionRatio="3:4"
        android:id="@+id/profileImage"
        android:src="@drawable/ic_person_add_xl"
        android:scaleType="centerInside"
        app:riv_border_width="3dp"
        app:riv_border_color="@color/accent_purple_light"
        app:riv_corner_radius="20dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:id="@+id/icon_new"
        android:src="@drawable/ic_new"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/accent_purple_dark"
        android:visibility="gone"/>

    <ImageView
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:id="@+id/icon_delete"
        android:src="@drawable/ic_delete"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/accent_red_dark"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>