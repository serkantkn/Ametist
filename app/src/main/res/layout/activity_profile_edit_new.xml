<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primary"
    tools:context=".activities.SettingsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="300dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="3:4"
                android:id="@+id/profileImage"
                android:src="@drawable/ic_person_profile"
                android:scaleType="centerCrop"
                app:riv_border_width="3dp"
                app:riv_border_color="@color/accent_purple_light"
                app:riv_corner_radius="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <EditText
                android:id="@+id/input_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/background_edittext_dark"
                android:textColorHint="@color/secondary_text"
                android:textColor="@color/primary_text"
                android:hint="@string/name"
                android:fontFamily="@font/jost_regular"
                android:textSize="17sp"
                android:inputType="text"
                android:paddingStart="25dp"
                android:paddingTop="15dp"
                android:paddingEnd="25dp"
                android:paddingBottom="15dp"
                android:maxLines="1"
                android:importantForAutofill="no"
                app:layout_constraintTop_toBottomOf="@id/profileImage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="10dp" />

            <Spinner
                android:id="@+id/spinnerAge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_edittext_dark"
                android:textColor="@color/primary_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/input_name"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/radioGender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/primary_dark"
                app:cardCornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/spinnerAge"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="10dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textGender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/gender"
                        android:textColor="@color/accent_purple_dark"
                        android:textSize="17sp"
                        android:fontFamily="@font/jost_regular"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintHorizontal_bias="0"
                        android:layout_marginStart="16dp"/>

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toTopOf="@id/textGender"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/textGender"
                        android:layout_marginStart="25dp">

                        <RadioButton
                            android:id="@+id/radioMale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/man"
                            android:textColor="@color/primary_text"
                            android:layout_marginEnd="10dp"
                            android:fontFamily="@font/jost_regular"
                            android:textSize="17sp"
                            android:layout_gravity="center"/>

                        <RadioButton
                            android:id="@+id/radioFemale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/woman"
                            android:textColor="@color/primary_text"
                            android:layout_marginStart="10dp"
                            android:fontFamily="@font/jost_regular"
                            android:textSize="17sp"
                            android:layout_gravity="center"/>

                    </RadioGroup>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textHeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jost_regular"
                android:text="@string/user_height"
                android:textColor="@color/accent_purple_dark"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="@id/np_height"
                app:layout_constraintEnd_toStartOf="@id/np_height"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/radioGender" />

            <NumberPicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/np_height"
                app:layout_constraintTop_toBottomOf="@id/radioGender"
                app:layout_constraintStart_toEndOf="@id/textHeight"
                app:layout_constraintEnd_toStartOf="@id/textHeight_cm"/>

            <TextView
                android:id="@+id/textHeight_cm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cm"
                android:textColor="@color/primary_text"
                android:textSize="17sp"
                android:fontFamily="@font/jost_regular"
                app:layout_constraintTop_toTopOf="@id/np_height"
                app:layout_constraintBottom_toBottomOf="@id/np_height"
                app:layout_constraintStart_toEndOf="@id/np_height"
                app:layout_constraintEnd_toStartOf="@id/textWeight"/>

            <TextView
                android:id="@+id/textWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/jost_regular"
                android:text="@string/user_weight"
                android:textColor="@color/accent_purple_dark"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="@id/np_height"
                app:layout_constraintEnd_toStartOf="@id/np_weight"
                app:layout_constraintStart_toEndOf="@id/textHeight_cm"
                app:layout_constraintTop_toBottomOf="@id/radioGender" />

            <NumberPicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/np_weight"
                app:layout_constraintTop_toBottomOf="@id/radioGender"
                app:layout_constraintStart_toEndOf="@id/textWeight"
                app:layout_constraintEnd_toStartOf="@id/textWeight_cm"/>

            <TextView
                android:id="@+id/textWeight_cm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cm"
                android:textColor="@color/primary_text"
                android:textSize="17sp"
                android:fontFamily="@font/jost_regular"
                app:layout_constraintTop_toTopOf="@id/np_weight"
                app:layout_constraintBottom_toBottomOf="@id/np_weight"
                app:layout_constraintStart_toEndOf="@id/np_weight"
                app:layout_constraintEnd_toEndOf="parent"/>

            <EditText
                android:id="@+id/input_about"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/background_edittext_dark"
                android:textColorHint="@color/secondary_text"
                android:textColor="@color/primary_text"
                android:hint="@string/about"
                android:fontFamily="@font/jost_regular"
                android:textSize="17sp"
                android:inputType="textMultiLine"
                android:paddingStart="25dp"
                android:paddingTop="15dp"
                android:paddingEnd="25dp"
                android:paddingBottom="15dp"
                android:maxLines="3"
                app:layout_constraintTop_toBottomOf="@id/np_height"
                app:layout_constraintStart_toStartOf="@id/input_name"
                app:layout_constraintEnd_toEndOf="@id/input_name"
                android:importantForAutofill="no" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <eightbitlab.com.blurview.BlurView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbarBlur"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/buttonBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/background_toolbar_button"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_back"
                android:padding="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/activityName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jost_light"
                android:text="@string/edit_profile"
                android:textColor="@color/primary_text"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="@id/buttonBack"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/buttonBack"
                app:layout_constraintTop_toTopOf="@id/buttonBack"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/buttonDone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jost_bold"
                android:text="@string/save"
                android:textColor="@color/accent_red_dark"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@id/buttonBack"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/buttonBack"
                app:layout_constraintTop_toTopOf="@id/buttonBack"
                app:layout_constraintHorizontal_bias="1"
                android:layout_marginEnd="15dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </eightbitlab.com.blurview.BlurView>

</androidx.constraintlayout.widget.ConstraintLayout>