<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.LoginTabFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/backButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp">

            <ImageView
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:id="@+id/button_back"
                android:src="@drawable/ic_back"
                android:padding="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_back_to_signin"
                android:text="Geri git. HesabÄ±m var."
                android:textColor="@color/white"
                android:textSize="17sp"
                android:fontFamily="@font/jost_regular"
                app:layout_constraintTop_toTopOf="@id/button_back"
                app:layout_constraintBottom_toBottomOf="@id/button_back"
                app:layout_constraintStart_toEndOf="@id/button_back"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <EditText
            android:id="@+id/input_name"
            android:layout_width="0dp"
            app:layout_constraintWidth_max="460dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/background_edittext"
            android:textColorHint="@color/secondary_text"
            android:textColor="@color/primary_text"
            android:hint="@string/name"
            android:fontFamily="@font/jost_regular"
            android:textSize="17sp"
            android:inputType="text"
            android:paddingStart="25dp"
            android:paddingTop="15dp"
            android:paddingEnd="25dp"
            android:paddingBottom="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/backButton"
            android:layout_marginTop="10dp"
            android:importantForAutofill="no" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardAge"
            android:layout_width="0dp"
            app:layout_constraintWidth_max="460dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/primary_transparent"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@id/input_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/titleAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/jost_regular"
                    android:text="@string/age"
                    android:textColor="@color/accent_red_light"
                    android:textSize="17sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0"/>

                <Spinner
                    android:id="@+id/spinnerAge"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/background_edittext"
                    android:textColor="@color/primary_text"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/titleAge"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/radioGender"
            android:layout_width="0dp"
            app:layout_constraintWidth_max="460dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/primary"
            app:cardCornerRadius="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardAge"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gender"
                    android:textColor="@color/accent_purple_dark"
                    android:textSize="17sp"
                    android:fontFamily="@font/jost_regular"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"/>

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/textGender"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <RadioButton
                        android:id="@+id/radioMale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/man"
                        android:textColor="@color/primary_text"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/jost_regular"
                        android:textSize="17sp"
                        android:layout_gravity="center"/>

                    <RadioButton
                        android:id="@+id/radioFemale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/woman"
                        android:textColor="@color/primary_text"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/jost_regular"
                        android:textSize="17sp"
                        android:layout_gravity="center"/>

                </RadioGroup>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <EditText
            android:id="@+id/input_mail"
            android:layout_width="0dp"
            app:layout_constraintWidth_max="460dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/background_edittext"
            android:textColorHint="@color/secondary_text"
            android:textColor="@color/primary_text"
            android:hint="@string/email"
            android:fontFamily="@font/jost_regular"
            android:textSize="17sp"
            android:inputType="textEmailAddress"
            android:paddingStart="25dp"
            android:paddingTop="15dp"
            android:paddingEnd="25dp"
            android:paddingBottom="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/radioGender"
            app:layout_constraintWidth_percent=".9"
            app:layout_constraintVertical_bias="0"
            android:importantForAutofill="no" />

        <EditText
            android:id="@+id/input_password"
            android:layout_width="0dp"
            app:layout_constraintWidth_max="460dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/background_edittext"
            android:textColorHint="@color/secondary_text"
            android:textColor="@color/primary_text"
            android:hint="@string/password"
            android:fontFamily="@font/jost_regular"
            android:textSize="17sp"
            android:inputType="textPassword"
            android:paddingStart="25dp"
            android:paddingTop="15dp"
            android:paddingEnd="25dp"
            android:paddingBottom="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/input_mail"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintWidth_percent=".9"
            android:importantForAutofill="no" />

        <androidx.cardview.widget.CardView
            android:id="@+id/buttonSignup"
            android:layout_width="0dp"
            app:layout_constraintWidth_max="360dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/input_password"
            app:layout_constraintVertical_bias=".1"
            app:layout_constraintWidth_percent=".6" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/purple_gradient">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sing_up"
                    android:textSize="17sp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/jost_regular"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/text_instead_of"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/instead_of"
            app:layout_constraintTop_toBottomOf="@id/buttonSignup"
            app:layout_constraintStart_toStartOf="@id/buttonSignup"
            app:layout_constraintEnd_toEndOf="@id/buttonSignup"
            android:textColor="@color/primary_text"
            android:fontFamily="@font/jost_regular"
            android:textSize="17sp"
            android:layout_marginTop="25dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_signin_with_google"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toBottomOf="@id/text_instead_of"
            app:layout_constraintStart_toStartOf="@id/buttonSignup"
            app:layout_constraintEnd_toEndOf="@id/buttonSignup"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="25dp"
            app:cardElevation="10dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/primary"
                android:padding="9dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="1:1"
                    android:id="@+id/google_logo"
                    android:src="@drawable/google_logo"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/text_signin_with_google"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    android:layout_marginEnd="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_signin_with_google"
                    android:text="@string/sign_in_with_google"
                    android:textSize="17sp"
                    android:textColor="@color/primary_text"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/google_logo"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/input_password"
            app:layout_constraintVertical_bias=".1"
            android:visibility="gone"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>